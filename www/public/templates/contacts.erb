<form id="contact_form">
<div class="columns is-centered">
  <div class="column is-4">

    <div class="field" id="contact_form_name">
      <label class="label">Your name</label>
      <div class="control has-icons-left has-icons-right">
        <input class="input is-danger" type="text" placeholder="Your name">
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-exclamation-triangle"></i>
        </span>
      </div>
      <p class="help is-danger">Pleace enter name</p>
    </div>

    <div class="field" id="contact_form_email">
      <label class="label">Your email</label>
      <div class="control has-icons-left has-icons-right">
        <input class="input is-danger" type="email" placeholder="Your email">
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-exclamation-triangle"></i>
        </span>
      </div>
      <p class="help is-danger">This email is invalid</p>
    </div>

    <div class="field" id="contact_form_phone">
      <label class="label">Your phone</label>
      <div class="control has-icons-left has-icons-right">
        <input class="input is-danger" type="phone" placeholder="Your phone">
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-exclamation-triangle"></i>
        </span>
      </div>
      <p class="help is-danger">This phone is invalid</p>
    </div>

    <div class="field">
      <label class="label">Message</label>
      <div class="control">
        <textarea class="textarea" placeholder="Textarea"></textarea>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link">Submit</button>
      </div>
    </div>
  </div>
</div>
</form>
