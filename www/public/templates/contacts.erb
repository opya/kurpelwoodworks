<form id="contact_form" method="post">
  <%= csrf_tag %>
  <div class="columns is-centered">
    <div class="column is-4">
      <% if @sent %>
        <div class="notification is-success">
          Благодаря, съобщението е изпратено
        </div>
      <% end %>

      <div class="field" id="contact_form_name">
        <label class="label">Име</label>
        <div class="control has-icons-left has-icons-right">
          <input class="input is-danger" type="text" placeholder="Име" name="contact[name]">
          <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-exclamation-triangle"></i>
          </span>
        </div>
        <p class="help is-danger">Моля въвдете име</p>
      </div>

      <div class="notification is-info">
        Въведете име или телефон
      </div>

      <div class="field" id="contact_form_email">
        <label class="label">Email</label>
        <div class="control has-icons-left has-icons-right">
          <input class="input is-danger" type="email" placeholder="Email" name="contact[email]">
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-exclamation-triangle"></i>
          </span>
        </div>
        <p class="help is-danger">Моле въведете email</p>
      </div>

      <div class="field" id="contact_form_phone">
        <label class="label">Телефон</label>
        <div class="control has-icons-left has-icons-right">
          <input class="input is-danger" type="tel" name="contact[phone]" pattern="^([+]?359)|0?(|-| )8[789]\d{1}(|-| )\d{3}(|-| )\d{3}$" placeholder="Телефон">
          <span class="icon is-small is-left">
            <i class="fas fa-phone"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-exclamation-triangle"></i>
          </span>
        </div>
        <p class="help is-danger">Моля въведете телефон</p>
      </div>

      <div class="field" id="contact_form_message">
        <label class="label">Съобщение</label>
        <div class="control">
          <textarea class="textarea is-danger" placeholder="Съобщение" name="contact[message]"></textarea>
        </div>
        <p class="help is-danger">Моля въведете съобщени</p>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <button class="button is-link">Съобщение</button>
        </div>
      </div>
    </div>
  </div>
</form>

<%= assets([:js, :contact_form]) %>

<script type="text/javascript">
  toggle_form_alerts(false);
</script>
